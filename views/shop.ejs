                    <li class="nav__item"><a href="#shop" class="nav__link active">Shop</a></li>
                </ul>
            </div>

       
        <!--CART INFO-->

        <div class="cart__info" id="cart-info">
            <span class="cart__info-icon"><i class="bx bx-shopping-bag" ></i></span>
                <p class="cart__detail"><span class="items__count" id="item-count"> </span> - R<span class="item__total" id="item-total"></span></p>        
        </div>
        </nav>
    </header>

  

    <!--All Products-->
    <main class="l-main">
        <section class="featured section" id="shop">
            <h2 class="section-title">All Products</h2>
           
            <div class="featured__container bd-grid">


                
                <% items.shop.forEach(function(item){ %>

                <article class="sneaker" data-item-id="<%= item.id %>" >
                    <div class=""></div>
                    <img src="Img/<%= item.imgName %>" alt="" class="sneaker__img">
                    <span class="sneaker__name" id="store-item-name"><%= item.name %></span>
                    <span class="sneaker__color" id="item-color"> <%= item.color %></span>
                    <span class="sneaker__price" >R <strong class="item__price"><%= item.price /100 %></strong></span>
                    <span href="" class="button-light" id=>Add to Cart <i class="bx bx-right-arrow-alt button-icon"></i></span>          
                </article>
           
                    <% }) %>

    
               </div>

            <div class="sneaker__pages bd-grid">
                <div>
                    <span class="sneaker__pag">1</span>
                    <span class="sneaker__pag">2</span>
                    <span class="sneaker__pag">3</span>
                    <span class="sneaker__pag">4</span>
                    <span class="sneaker__pag">&#8594;</span>


                </div>
            </div>
              
            
        </section>
    </main>

